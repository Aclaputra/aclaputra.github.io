{
  "compilerOptions": {
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "target": "es2015" ,
    "jsx": "react",
    "types": [
      "react"
    ],
    "module": "esNext",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "declaration": false,
    "removeComments": true,
    "noImplicitReturns": true,
    "noUnusedLocals": false,
    "strict": true,
    "outDir": "dist",
    "baseUrl": "src",
    "typeRoots": [
      "./types",
      "node_modules/@types"
    ],
    "strictNullChecks": true,
    "allowJs": true
  },
  "exclude": ["dist", "node_modules"]
}
